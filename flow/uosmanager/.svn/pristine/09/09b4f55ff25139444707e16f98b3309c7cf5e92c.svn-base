<!DOCTYPE html>
<head>
<meta charset="utf-8">
<title>Redis队列监控</title>
<script type="text/javascript" src="../../common/ext/boot.js"></script>
	<script src="../../common/echarts/echarts.js"></script>
	<script src="js/redisQueueMonitor.js"></script>
	<script type="text/javascript">
		// 路径配置
		require.config({
			paths : {
				echarts : '../../common/echarts/dist'
			}
		});
		// 使用
		require([ 'echarts', 'echarts/chart/bar' // 使用柱状图就加载bar模块，按需加载
		], function(ec) {
			 initMyChart(ec);
			 getQueueHosts();
			// getQueueNames();
			 refreshData();
		});
	</script>
</head>
<body>
	<a id="btnRefreshData" href="#" class="easyui-linkbutton" data-options="disabled:false" onclick="refreshData();">刷新</a>
	<a id="btnAutoRefreshData" href="#" class="easyui-linkbutton" data-options="disabled:false" onclick="autoRefreshData();">自动刷新</a>
	<a id="btnCancelAutoRefreshData" href="#" class="easyui-linkbutton" data-options="disabled:false" onclick="cancelAutoRefreshData();">取消自动刷新</a>
	<strong id="countdown" style="margin-left:80px;color:red"></strong>
	<br><br>
	<!-- 为ECharts准备一个具备大小（宽高）的Dom --> 
	<div id="publicQueueChart" style="height: 230px; "></div>
	<!-- <div id="busiQueueChart1" style="height: 190px; "></div>
	<div id="busiQueueChart2" style="height: 190px; "></div>
	<div id="infQueueChart" style="height: 190px; "></div> -->
</body>