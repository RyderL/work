package com.ztesoft.uosflow.core.config;

public class ConfigContext {

	private static boolean needInfPersist;

	private static boolean persistAfterDone;

	public static boolean isNeedInfPersist() {
		return needInfPersist;
	}

	public static void setNeedInfPersist(boolean needInfPersist) {
		ConfigContext.needInfPersist = needInfPersist;
	}

	public static boolean isPersistAfterDone() {
		return persistAfterDone;
	}

	public static void setPersistAfterDone(boolean persistAfterDone) {
		ConfigContext.persistAfterDone = persistAfterDone;
	}

}
